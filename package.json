  "main": "commitlint.config.js",
  "keywords": [],
  "description": "this app is for the djokwa school management system ERP platform -   **Perequisites: make sure you have docker & docker compose installed\r     locally**\r -   Clone the staging branch of this repository.\r -   Open the project in your favourite code editor _preferrably Visual Studio\r     Code_.",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "db:migration": "npx prisma migrate dev --name init",
    "prisma:studio": "npx prisma studio",
    "prisma:dev:deploy": "prisma migrate deploy",
    "db:dev:rm": "docker compose rm postgres -s -f -v",
    "db:dev:up": "docker compose up postgres -d",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && npm run prisma:dev:deploy",
    "server-pre": "npm install && npm install --prefix server",
    "build:prod": "npm run build && (cd server && npm run build)",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write .",
    "test-all": "npm run check-format && npm run check-lint && npm run check-types && npm run build",
    "commit": "git-cz",
    "prepare": "husky install",
    "lint": "eslint ./src",
    "lint:debug": "eslint ./src --debug",
    "lint:fix": "eslint ./src --fix"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
